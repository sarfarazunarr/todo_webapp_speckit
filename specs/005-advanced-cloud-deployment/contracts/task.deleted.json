{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "TaskDeletedEvent",
  "description": "Event published when a task is deleted.",
  "type": "object",
  "properties": {
    "event_id": {
      "type": "string",
      "format": "uuid"
    },
    "event_type": {
      "type": "string",
      "const": "task.deleted"
    },
    "event_source": {
      "type": "string"
    },
    "event_time": {
      "type": "string",
      "format": "date-time"
    },
    "payload": {
      "type": "object",
      "properties": {
        "id": { "type": "integer" },
        "owner_id": { "type": "integer" }
      },
      "required": ["id", "owner_id"]
    }
  },
  "required": ["event_id", "event_type", "event_time", "payload"]
}
